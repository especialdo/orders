@page "/countries"

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo Pais</a>
</div>
<h3>Paises</h3>
<GenericList MyList="Countries">
    <Body>

        <Pagination CurrentPage="currentPage"
            TotalPages="totalPages"
            SelectPage="SelectedPageAsync" />


        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width:150">Pais</th>
                    <th style="width:210px">Departamentos / Estados</th>
                    <th style="width:168px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StatesNumber</td>
                        <td>
                            <a href="/countries/edit/@country.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/countries/details/@country.Id" class="btn btn-sm btn-info">Detalles</a>
                            <button @onclick=@( () => DeleteAsync(country)) class="btn btn-sm btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>


